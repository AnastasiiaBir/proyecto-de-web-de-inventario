<!-- views/admin/nuevo_producto.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Nuevo Producto</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Añadir Nuevo Producto</h1>
  <form action="/admin/productos/nuevo" method="POST">
    <input type="text" name="nombre" placeholder="Nombre" required><br>
    <input type="text" name="marca" placeholder="Marca"><br>

    <label>Categoría:</label>
    <select name="categoria_id" required>
      <% categorias.forEach(cat => { %>
        <option value="<%= cat.id %>"><%= cat.nombre %></option>
      <% }) %>
    </select><br>

    <label>Proveedor:</label>
    <select name="proveedor_id" required>
      <% proveedores.forEach(pr => { %>
        <option value="<%= pr.id %>"><%= pr.nombre %></option>
      <% }) %>
    </select><br>

    <label>Localización:</label>
    <select name="localizacion_id" required>
      <% localizaciones.forEach(loc => { %>
        <option value="<%= loc.id %>"><%= loc.nombre %></option>
      <% }) %>
    </select><br>

    <input type="number" name="precio" placeholder="Precio"><br>
    <input type="number" name="costo" placeholder="Costo"><br>
    <input type="text" name="medida" placeholder="Medida"><br>
    <input type="number" name="stock" placeholder="Stock"><br>
    <input type="number" name="stock_minimo" placeholder="Stock mínimo"><br>
    <textarea name="observaciones" placeholder="Observaciones"></textarea><br>

    <button type="submit">Añadir</button>
  </form>
  <a href="/admin/productos">Volver al panel</a>
</body>
</html>
