<!-- views/admin/productos.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .button-group { display: flex; gap: 10px; margin-bottom: 20px; }
    .export-container { position: relative; display: inline-block; }
    .export-dropdown {
      display: none; position: absolute; top: 100%; left: 0;
      background: #fff; border: 1px solid #ccc; border-radius: 5px;
      min-width: 140px; box-shadow: 0 2px 5px rgba(0,0,0,.15); z-index: 1000;
    }
    .export-option { display: block; padding: 8px 12px; text-decoration: none; color: #333; }
    .export-option:hover { background: #f0f0f0; }
    .editable { cursor: pointer; }
    .save-btn { display: none; margin-right: 5px; }
    .delete-btn { margin-left: 5px; }
    .filters { margin-bottom: 10px; }
    .filter-input { margin-right: 5px; margin-bottom: 5px; }
    .low-stock { background-color: #ffcccc; }
  </style>
</head>
<body>
  <h1>Productos</h1>

  <div class="button-group">
    <div class="export-container">
      <button id="btnExportar" type="button">Exportar ‚ñº</button>
      <div id="exportMenu" class="export-dropdown">
        <a href="/admin/productos/exportar/excel" class="export-option">üìä Excel</a>
        <a href="/admin/productos/exportar/pdf" class="export-option">üìÑ PDF</a>
      </div>
    </div>
    <a href="/admin/productos/nuevo"><button>A√±adir Producto</button></a>
  </div>

   <!-- Filtros a trav√©s de GET -->
  <form method="GET" action="/admin/productos" class="filters">
    <input type="text" name="nombre" placeholder="Nombre" value="<%= req.query.nombre || '' %>" class="filter-input">
    <input type="text" name="marca" placeholder="Marca" value="<%= req.query.marca || '' %>" class="filter-input">
    <input type="text" name="categoria" placeholder="Categor√≠a" value="<%= req.query.categoria || '' %>" class="filter-input">
    <input type="text" name="proveedor" placeholder="Proveedor" value="<%= req.query.proveedor || '' %>" class="filter-input">
    <input type="number" name="precioMax" placeholder="Precio m√°ximo" value="<%= req.query.precioMax || '' %>" class="filter-input">
    <input type="number" name="costoMax" placeholder="Costo m√°ximo" value="<%= req.query.costoMax || '' %>" class="filter-input">
    <input type="number" name="stockMin" placeholder="Stock m√≠nimo" value="<%= req.query.stockMin || '' %>" class="filter-input">
    <input type="text" name="localizacion" placeholder="Localizaci√≥n" value="<%= req.query.localizacion || '' %>" class="filter-input">
    <button type="submit">Filtrar</button>
  </form>

  <table id="tablaProductos" border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Categor√≠a</th>
        <th>Proveedor(es)</th>
        <th>Precio</th>
        <th>Costo</th>
        <th>Medida</th>
        <th>Stock</th>
        <th>Stock m√≠nimo</th>
        <th>Localizaci√≥n</th>
        <th>Observaciones</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(p => { %>
      <tr data-id="<%= p.id %>" class="<%= p.stock < p.stock_minimo ? 'low-stock' : '' %>">
        <td class="editable" data-field="id"><%= p.id %></td>
        <td class="editable" data-field="nombre"><%= p.nombre %></td>
        <td class="editable" data-field="marca"><%= p.marca %></td>
        <td class="editable" data-field="categoria_nombre"><%= p.categoria_nombre %></td>
        <td class="editable" data-field="proveedor_nombre"><%= p.proveedor_nombre %></td>
        <td class="editable" data-field="precio"><%= p.precio %></td>
        <td class="editable" data-field="costo"><%= p.costo %></td>
        <td class="editable" data-field="medida"><%= p.medida || '' %></td>
        <td>
          <% if (p.stock < 1) { %>
            <span style="color:red;">–ù–µ—Ç –≤ –Ω–∞–ª–∏—á–∏–∏</span>
          <% } else { %>
            <%= p.stock %>
          <% } %>
        </td>
        <td><%= p.stock_minimo %></td>
        <td class="editable" data-field="localizacion_nombre"><%= p.localizacion_nombre %></td>
        <td class="editable" data-field="observaciones"><%= p.observaciones || '' %></td>
        <td>
          <button class="save-btn" style="display:none;">Guardar</button>
          <button class="cancel-btn" style="display:none;">Cancelar</button>
          <button class="delete-btn">Eliminar</button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <br>
  <a href="/admin/dashboard">Volver al panel</a>


  <script>
document.querySelectorAll('.editable-cell').forEach(cell => {
  cell.addEventListener('dblclick', async () => {
    const productoId = cell.dataset.productoId;
    const field = cell.dataset.field;

    const res = await fetch('/admin/productos/options');
    const data = await res.json();

    let options = [];
    if (field === 'categoria_id') options = data.categorias;
    if (field === 'proveedor_id') options = data.proveedores;
    if (field === 'localizacion_id') options = data.localizaciones;

    const select = document.createElement('select');
    options.forEach(opt => {
      const option = document.createElement('option');
      option.value = opt.id;
      option.textContent = opt.nombre;
      if (opt.nombre === cell.textContent.trim()) option.selected = true;
      select.appendChild(option);
    });

    cell.textContent = '';
    cell.appendChild(select);
    select.focus();

    select.addEventListener('change', async () => {
      const newId = select.value;
      const body = {};
      body[field] = newId;

      const resp = await fetch(`/admin/productos/${productoId}/update`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body)
      });
      const result = await resp.json();
      if (result.success) {
        cell.textContent = select.selectedOptions[0].textContent;
      } else {
        alert('Error al actualizar');
        cell.textContent = select.selectedOptions[0].textContent;
      }
    });

    select.addEventListener('blur', () => {
      cell.textContent = select.selectedOptions[0].textContent;
    });
  });
});
</script>

  <script>
    window.categorias = JSON.parse('<%- JSON.stringify(categorias || []) %>');
    window.proveedores = JSON.parse('<%- JSON.stringify(proveedores || []) %>');;
    window.localizaciones = JSON.parse('<%- JSON.stringify(localizaciones || []) %>');
  </script>

  <script src="/js/productos.js"></script>
</body>
</html>