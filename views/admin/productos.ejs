<!-- views/admin/productos.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .button-group { display: flex; gap: 10px; margin-bottom: 20px; }
    .export-container { position: relative; display: inline-block; }
    .export-dropdown {
      display: none; position: absolute; top: 100%; left: 0;
      background: #fff; border: 1px solid #ccc; border-radius: 5px;
      min-width: 140px; box-shadow: 0 2px 5px rgba(0,0,0,.15); z-index: 1000;
    }
    .export-option { display: block; padding: 8px 12px; text-decoration: none; color: #333; }
    .export-option:hover { background: #f0f0f0; }
    .editable { cursor: pointer; }
    .save-btn { display: none; margin-right: 5px; }
    .delete-btn { margin-left: 5px; }
    .filters { margin-bottom: 10px; }
    .filter-input { margin-right: 5px; margin-bottom: 5px; }
  </style>
</head>
<body>
  <h1>Productos</h1>

  <div class="button-group">
    <div class="export-container">
      <button id="btnExportar" type="button">Exportar â–¼</button>
      <div id="exportMenu" class="export-dropdown">
        <a href="/admin/productos/exportar/excel" class="export-option">ðŸ“Š Excel</a>
        <a href="/admin/productos/exportar/pdf" class="export-option">ðŸ“„ PDF</a>
      </div>
    </div>
    <a href="/admin/productos/nuevo"><button>AÃ±adir Producto</button></a>
  </div>

  <div class="filters">
    <input type="text" id="filterNombre" placeholder="Nombre" class="filter-input">
    <input type="text" id="filterMarca" placeholder="Marca" class="filter-input">
    <input type="text" id="filterCategoria" placeholder="CategorÃ­a" class="filter-input">
    <input type="text" id="filterProveedor" placeholder="Proveedor" class="filter-input">
    <input type="number" id="filterPrecio" placeholder="Precio mÃ¡ximo" class="filter-input">
    <input type="number" id="filterCosto" placeholder="Costo mÃ¡ximo" class="filter-input">
    <input type="number" id="filterStock" placeholder="Stock mÃ­nimo" class="filter-input">
    <button id="btnFiltrar" class="btn">Filtrar</button>
  </div>

  <table id="tablaProductos" border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Marca</th>
        <th>CategorÃ­a</th>
        <th>Proveedor</th>
        <th>Precio</th>
        <th>Costo</th>
        <th>Stock</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(p => { %>
      <tr data-id="<%= p.id %>">
        <tr data-id="<%= p.id %>">
        <td class="editable" data-field="id"><%= p.id %></td>
        <td class="editable" data-field="nombre"><%= p.nombre %></td>
        <td class="editable" data-field="marca"><%= p.marca %></td>
        <td class="editable" data-field="categoria_nombre"><%= p.categoria_nombre || '' %></td>
        <td class="editable" data-field="proveedor_nombre"><%= p.proveedor_nombre || '' %></td>
        <td class="editable" data-field="precio"><%= p.precio %></td>
        <td class="editable" data-field="costo"><%= p.costo %></td>
        <td class="editable" data-field="stock"><%= p.stock %></td>
        <td>
          <button class="save-btn">Guardar</button>
          <button class="delete-btn">Eliminar</button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <br>
  <a href="/admin/dashboard">Volver al panel</a>

  <script src="/js/productos.js"></script>
</body>
</html>