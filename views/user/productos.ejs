<!-- views/user/productos.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1 style="text-align:center;">Productos</h1>

  <input type="text" id="search" placeholder="Buscar producto..." onkeyup="filterTable()">

  <table id="tablaProductos">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Categor√≠a</th>
        <th>Proveedor</th>
        <th>Precio</th>
        <th>Stock</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.nombre %></td>
        <td><%= p.marca %></td>
        <td><%= p.categoria_nombre || '' %></td>
        <td><%= p.proveedor_nombre || '' %></td>
        <td><%= p.precio %></td>
        <td><%= p.stock === 0 ? 'No hay stock' : p.stock %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/user/dashboard">Volver al dashboard</a>

  <script>
    function filterTable() {
      const filter = document.getElementById('search').value.toLowerCase();
      const rows = document.querySelectorAll('tbody tr');
      rows.forEach(row => {
        const id = row.cells[0].textContent.toLowerCase();
        const nombre = row.cells[1].textContent.toLowerCase();
        const marca = row.cells[2].textContent.toLowerCase();
        const categoria = row.cells[3].textContent.toLowerCase();
        const proveedor = row.cells[4].textContent.toLowerCase();
        const precio = row.cells[5].textContent.toLowerCase();
        const stock = row.cells[6].textContent.toLowerCase();

        row.style.display = (
          id.includes(filter) ||
          nombre.includes(filter) ||
          marca.includes(filter) ||
          categoria.includes(filter) ||
          proveedor.includes(filter) ||
          precio.includes(filter) ||
          stock.includes(filter)
        ) ? '' : 'none';
      });
    }
  </script>
</body>
</html>